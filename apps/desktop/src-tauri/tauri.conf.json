{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ink",
  "version": "1.0.2",
  "identifier": "io.mamahuhu.ink",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Ink",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "mdown", "mkd", "mdx"],
        "name": "Markdown Document",
        "role": "Editor",
        "rank": "Default"
      }
    ],
    "resources": {
      "resources/themes/*": "themes/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "A modern Markdown editor",
    "longDescription": "Ink is a modern, cross-platform Markdown editor built with Ink Stone, featuring a clean interface and powerful editing capabilities.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/mamahuhu-io/ink/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEzMENEMTlEQjBEQkNBNUIKUldSYnl0dXduZEVNRStiK3JJRlVPTkQvSWxjZFV4eHFSMndYei9mMmJ6SmdXQ2x5UjdWc0lhcnEK"
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    }
  }
}

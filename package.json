{
  "name": "ink-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "dev": "pnpm --filter @ink/desktop dev",
    "build": "pnpm --filter @ink/desktop build",
    "preview": "pnpm --filter @ink/desktop preview",
    "tauri": "pnpm --filter @ink/desktop tauri",
    "tauri:dev": "pnpm --filter @ink/desktop tauri:dev",
    "tauri:build": "pnpm --filter @ink/desktop tauri:build",
    "build:stone": "cd packages/stone && pnpm build",
    "build:stone:icon": "cd packages/stone/icons && pnpm build",
    "cargo": "cd apps/desktop/src-tauri && cargo",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0"
  },
  "pnpm": {
    "overrides": {
      "@ink/stone-icons": "workspace:*",
      "yjs": "^13.6.21"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}

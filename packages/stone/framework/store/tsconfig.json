{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["./src"],
  "exclude": ["./src/__tests__/**", "./src/test/**", "./src/**/*.spec.ts", "./src/**/*.test.ts"],
  "references": [{ "path": "../global" }, { "path": "../sync" }]
}
